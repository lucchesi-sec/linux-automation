# Bandit configuration for Python security scanning
# Configuration file for bandit security testing

[bandit]
# List of test IDs to skip
skips = []

# List of test IDs to run
tests = []

# List of paths to exclude from scanning
exclude_dirs = [
    '/tests',
    '/test',
    '/venv',
    '/env',
    '/.venv',
    '/.env',
    '/node_modules',
    '/.git'
]

# List of files to exclude
exclude = [
    '*/tests/*',
    '*/test_*',
    '*_test.py',
    '*/conftest.py'
]

# Confidence level for issues (LOW, MEDIUM, HIGH)
confidence = "MEDIUM"

# Severity level for issues (LOW, MEDIUM, HIGH)
severity = "MEDIUM"

# Output format options: csv, json, txt, xml, yaml
format = "json"

# Report only issues of a given confidence level or higher
assert_used = {
    'skips': ['B101'],  # Skip assert_used check
    'message': 'Use of assert detected. Consider using proper error handling.'
}

# Custom rules can be added here if needed
[profiles]
# Example profile for strict security scanning
strict = {
    'include': ['B201', 'B301', 'B302', 'B303', 'B304', 'B305', 'B306', 'B307', 'B308', 'B309', 'B310', 'B311', 'B312', 'B313', 'B314', 'B315', 'B316', 'B317', 'B318', 'B319', 'B320', 'B321', 'B322', 'B323', 'B324', 'B325', 'B326', 'B327', 'B401', 'B402', 'B403', 'B404', 'B405', 'B406', 'B407', 'B408', 'B409', 'B410', 'B411', 'B412', 'B413', 'B501', 'B502', 'B503', 'B504', 'B505', 'B506', 'B507', 'B601', 'B602', 'B603', 'B604', 'B605', 'B606', 'B607', 'B608', 'B609', 'B610', 'B611', 'B701', 'B702', 'B703'],
    'exclude': []
}